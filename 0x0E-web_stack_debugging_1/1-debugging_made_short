#!/usr/bin/env bash

# Remove the default Nginx configuration file if it exists
rm -f /etc/nginx/sites-enabled/default

# Create a symbolic link to the default Nginx configuration file
ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Restart Nginx to apply the configuration changes
if command -v systemctl &> /dev/null; then
    systemctl restart nginx
elif /etc/init.d/nginx restart; then
    /etc/init.d/nginx restart
else
    echo "Failed to restart Nginx. Please restart it manually."
fi

# Add a new line
echo
